<!-- app/views/users/new.html.erb -->

<div class="signup-container">
  <div class="signup-card">
    <h1>会員登録</h1>
    
    <%= form_for @user, url: users_path do |f| %>
      
      <% if @user.errors.any? %>
        <div class="error-messages">
          <h3><%= @user.errors.count %>けんのエラーがあります:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-group">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, class: "form-control", placeholder: "홍길동" %>
      </div>
      
      <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: "form-control", placeholder: "example@email.com" %>
      </div>
      
      <div class="form-group">
        <%= f.label :password, "パスワード (6文字以上)" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :password_confirmation, "パスワード確認" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
      
      <div class="form-actions">
        <%= f.submit "会員登録", class: "btn btn-primary" %>
      </div>
      
    <% end %>
  </div>
</div>